<style>
  .wrap-home-image{
   height: 100vh;
    width: 100%;
    background-size: cover;
    background-image: url(https://wallpaperaccess.com/full/185328.jpg);
    position: relative;
  }

  .info-title{
    position: absolute;
    width: 30%;
    left: 10%;
    top: 50%;
    transform: translateY(-50%);
    font-size: 50px;
    font-weight: bold;
  }

  .hoverable{
    box-shadow: 0 8px 17px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
  }

  .promotional-section{
    position: relative;
  }

  .promotional-text{
    position: absolute;
    top: 50%;
    left: 50px;
    width: 400px;
    transform: translateY(-50%);
  }
</style>

